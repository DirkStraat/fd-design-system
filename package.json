{
    "name": "@fdmg/design-system",
    "version": "0.4.24",
    "description": "FD Design System",
    "types": "main.d.ts",
    "main": "main.js",
    "sideEffects": false,
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:FDMediagroep/fd-design-system.git"
    },
    "scripts": {
        "build": "npx next build",
        "build:ci": "npm run build && npm run build:npm",
        "build:npm": "npm run webpack:prod && npm run copy:dts",
        "build:sls": "npx cross-env SERVERLESS=true next build",
        "copy:dts": "npx cpx -v \"./dist.d.ts/src/**/*.d.ts\" \"./dist\"",
        "dev": "next dev",
        "json-to-scss": "json-to-scss public/assets/design-tokens/* src/design-tokens",
        "test": "jest --passWithNoTests",
        "test:updateSnapshots": "jest -u --passWithNoTests",
        "typedoc": "npx typedoc",
        "webpack:prod": "npx cross-env NODE_ENV=production webpack --mode=production",
        "webpack-bundle-analyzer:npm": "npx cross-env WEBPACK_BUNDLE_ANALYZER=true npm run webpack:prod",
        "webpack-bundle-analyzer:next": "npx cross-env WEBPACK_BUNDLE_ANALYZER=true next build"
    },
    "author": "Willem Liu",
    "license": "ISC",
    "devDependencies": {
        "@testing-library/jest-dom": "^5.11.2",
        "@testing-library/react": "^11.0.4",
        "@testing-library/user-event": "^12.1.7",
        "@types/fetch-jsonp": "^1.0.0",
        "@types/highlight.js": "^9.12.4",
        "@types/jest": "^26.0.14",
        "@types/js-cookie": "^2.2.6",
        "@types/micro-cors": "^0.1.1",
        "@types/node": "^14.11.2",
        "@types/react": "^16.9.50",
        "@types/react-dom": "^16.9.8",
        "@types/xmldom": "^0.1.29",
        "autoprefixer": "^9.8.6",
        "copy-webpack-plugin": "^6.1.1",
        "core-js": "^3.6.5",
        "cpx": "^1.5.0",
        "cross-env": "^7.0.2",
        "css-loader": "^4.3.0",
        "date-input-polyfill": "^2.14.0",
        "fetch-jsonp": "^1.1.3",
        "highlight.js": "^10.2.1",
        "jest": "^25.5.4",
        "jest-css-modules": "^2.1.0",
        "json-to-scss": "^1.6.2",
        "micro-cors": "^0.1.1",
        "mini-css-extract-plugin": "^0.11.3",
        "next": "^9.5.3",
        "next-offline": "^5.0.2",
        "nookies": "^2.3.2",
        "path-to-regexp": "^6.2.0",
        "postcss-flexbugs-fixes": "^4.2.1",
        "postcss-loader": "^4.0.3",
        "postcss-normalize": "^9.0.0",
        "postcss-preset-env": "^6.7.0",
        "pretty": "^2.0.0",
        "raw-loader": "^4.0.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-element-to-jsx-string": "^14.3.1",
        "react-lowlight": "^2.0.0",
        "react-markdown": "^4.3.1",
        "sass": "^1.26.11",
        "sass-loader": "^10.0.2",
        "style-loader": "^1.3.0",
        "svgo": "^1.3.2",
        "svgo-loader": "^2.2.1",
        "ts-jest": "^25.5.1",
        "ts-loader": "^8.0.4",
        "typedoc": "^0.19.2",
        "typescript": "^3.9.7",
        "webpack": "^4.44.2",
        "webpack-bundle-analyzer": "^3.9.0",
        "webpack-cli": "^3.3.12",
        "xmldom": "^0.3.0"
    },
    "dependencies": {
        "js-cookie": "^2.2.1"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all",
            "ie 11"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version",
            "last 1 edge version",
            "ie 11"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "collectCoverage": true,
        "coverageDirectory": "js-coverage",
        "coverageReporters": [
            "lcov",
            "text"
        ],
        "globals": {
            "ts-jest": {
                "tsConfig": "tsconfig.test.json"
            }
        },
        "testPathIgnorePatterns": [
            "/cypress/",
            "__tests__/mockdata/"
        ],
        "moduleNameMapper": {
            "\\.(css|less|scss|sss|styl)$": "<rootDir>/node_modules/jest-css-modules"
        },
        "transform": {
            "\\.svg$": "./jest/transformers/raw-loader.js"
        }
    }
}
